@model Rantup.Web.ViewModels.StandardViewModel

@{
    ViewBag.Title = "Ny meny";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@RenderPage("~/Views/Partials/_StandardMenu.cshtml", Model)

@Html.ActionLink("Godkänn", "ApproveMenu","Admin",new{enterpriseId = Model.Enterprise.Id}, new{@class="btn btn-success"})
@Html.ActionLink("Ta bort", "DisapproveMenu","Admin",new{enterpriseId = Model.Enterprise.Id}, new{@class="btn btn-danger", onclick="return confirm('Vill du verkligen ta bort detta bidrag?');"})